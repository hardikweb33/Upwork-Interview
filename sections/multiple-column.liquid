<div class="multiple-column">
  <div class="page-width">
    {%- for block in section.blocks -%}
    {%- case block.type -%}
    {%- when 'image' -%}
    <div class="grid {% if block.settings.text_layout == 'left' %}left-block{% endif %}">
      {% if block.settings.long_img != blank %}
      <div class="grid__item multiple-column-item-long">
        <div class="img-box">
          <img src="{{ block.settings.long_img | img_url: 'master' }}" alt="{{ block.settings.long_img.alt | escape }}">
        </div>
      </div>
      {% endif %}
      {% if block.settings.icon_img != blank or block.settings.heading != blank or block.settings.subtext != blank %}
      <div class="grid__item multiple-column-text">
        <div class="multiple-column-info">
          {% if block.settings.icon_img != blank %}
          <img src="{{ block.settings.icon_img | img_url: 'master' }}" alt="{{ block.settings.icon_img.alt | escape }}">
          {% endif %}
          {% if block.settings.heading != blank %}
          <h3>{{ block.settings.heading | escape }}</h3>
          {% endif %}
          {% if block.settings.subtext != blank %}
          {{ block.settings.subtext }}
          {% endif %}
          {% if block.settings.button != blank %}
          <a href="{{ block.settings.button_link }}" class="button">{{ block.settings.button }}</a>  
          {% endif %}
        </div>
      </div>
      {% endif %}
    </div>
    
    {%- when 'Image' -%}
    <div class="grid {% if block.settings.textlayout == 'left' %}left-block{% endif %}">
      {% if block.settings.iconimg != blank or block.settings.title != blank or block.settings.sub_text != blank %}
      <div class="grid__item multiple-column-text">
        <div class="multiple-column-info">
          {% if block.settings.iconimg != blank %}
          <img src="{{ block.settings.iconimg | img_url: 'master' }}" alt="{{ block.settings.iconimg.alt | escape }}">
          {% endif %}
          {% if block.settings.title != blank %}
          <h3>{{ block.settings.title | escape }}</h3>
          {% endif %}
          {% if block.settings.sub_text != blank %}
          {{ block.settings.sub_text }}
          {% endif %}
          {% if block.settings.btn != blank %}
          <a href="{{ block.settings.btn_link }}" class="button">{{ block.settings.btn }}</a>  
          {% endif %}
        </div>
      </div>
      {% endif %}
      {% if block.settings.image_one != blank %}
      <div class="grid__item multiple-column-img">
        <div class="img-box">
          <img src="{{ block.settings.image_one | img_url: 'master' }}" alt="{{ block.settings.image_one.alt | escape }}">
        </div>
      </div>
      {% endif %}
      {% if block.settings.image_two != blank %}
      <div class="grid__item multiple-column-img">
        <div class="img-box">
          <img src="{{ block.settings.image_two | img_url: 'master' }}" alt="{{ block.settings.image_two.alt | escape }}">
        </div>
      </div>
      {% endif %}
    </div>
    {%- endcase -%}
    {%- endfor -%}
  </div>
</div>


